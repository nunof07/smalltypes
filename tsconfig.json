{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": ".",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "paths": {
            "@main": ["src/main/index"],
            "@main/*": ["src/main/*"],
            "@test/*": ["src/test/*"]
        }
    },
    "exclude": [
        "dist"
    ]
}
