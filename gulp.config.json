{
    "module": "smalltypes",
    "paths": {
        "entry": "src/main/index.ts",
        "src": "src/**/*.ts",
        "main": "src/main/**/*.ts",
        "test": "src/test/**/*Test.ts",
        "destination": "dist",
        "bundle": "smalltypes.js",
        "bundle_full": "dist/smalltypes.js"
    },
    "rollup": {
        "format": "umd"
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    },
    "declarations": {
        "exclude": [
            "**/index.d.ts"
        ]
    },
    "documentation": {
        "out": "docs",
        "mode": "file",
        "excludeExternals": true,
        "excludePrivate": true,
        "name": "SmallTypes",
        "readme": "none",
        "ignoreCompilerErrors": true
    }
}