{
    "paths": {
        "entry": "src/main/index.ts",
        "src": "src/**/*.ts",
        "main": "src/main/**/*.ts",
        "test": "src/test/**/*Test.ts",
        "destination": "dist",
        "bundle": "smalltypes_rollup.js"
    },
    "browserify": {
        "basedir": ".",
        "debug": true,
        "cache": {},
        "packageCache": {},
        "standalone": "smalltypes"
    },
    "babel": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    },
    "declarations": {
        "name": "smalltypes",
        "exclude": [
            "**/index.d.ts"
        ]
    },
    "documentation": {
        "out": "docs",
        "mode": "file",
        "excludeExternals": true,
        "excludePrivate": true,
        "name": "SmallTypes",
        "readme": "none",
        "ignoreCompilerErrors": true
    }
}