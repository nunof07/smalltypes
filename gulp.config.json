{
    "paths": {
        "entry": "src/index.ts",
        "src": "src/**/*.ts",
        "main": "src/main/**/*.ts",
        "test": "src/test/**/*Test.ts",
        "destination": "dist",
        "bundle": "smalltypes.js"
    },
    "browserify": {
        "basedir": ".",
        "debug": true,
        "cache": {},
        "packageCache": {},
        "standalone": "smalltypes"
    },
    "babel": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    },
    "declarations": {
        "name": "smalltypes",
        "exclude": [
            "node_modules/**/*.d.ts",
            "src/test/**/*.ts",
            "typings/**/*.d.ts"
        ],
        "out": "smalltypes.d.ts"
    }
}