{
    "main": "src/remake/main/main.ts",
    "dist": "dist",
    "bundle": "game.js",
    "src": "src/remake/**/*.ts",
    "test": "src/**/*.spec.ts",
    "copy": [
        "src/index.html",
        "src/assets/**/*",
        "node_modules/phaser-ce/build/phaser.min.js",
        "node_modules/phaser-ce/build/phaser.map"
    ],
    "browserify": {
        "basedir": ".",
        "debug": true,
        "cache": {},
        "packageCache": {}
    },
    "babel": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    }
}