{
    "main": "src/index.ts",
    "dist": "dist",
    "bundle": "index.js",
    "src": "src/**/*.ts",
    "test": "src/test/**/*Test.ts",
    "browserify": {
        "basedir": ".",
        "debug": true,
        "cache": {},
        "packageCache": {}
    },
    "babel": {
        "extensions": [
            ".js",
            ".ts"
        ]
    },
    "tslint": {
        "formatter": "stylish"
    },
    "mocha": {
        "reporter": "dot",
        "require": [
            "jsdom-global/register",
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ]
    }
}